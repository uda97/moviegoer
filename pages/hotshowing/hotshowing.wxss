.movieList {
  width: 100%;
	position: relative;
}

.movieItem {
  width: 100%;
  height: 300rpx;
  display: flex;
	align-items: center;
	justify-content: space-around;
  position: relative;
  border-bottom: solid 1rpx #999;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  margin-bottom: 10rpx;
}

.img {
  width: 30%;
	height: 100%;
  text-align: center;
}

.img image {
  width: 90%;
  height: 100%;
}

.content {
  font-size: 14px;
  margin-left: 20rpx;
	width: 65%;
	
}
.score {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: blue;
  border: solid 1rpx blue;
  border-radius: 10rpx;
	padding:0 10rpx;
}
.content text{
	font-size: 12px;
	line-height: 20px;
}
